<h1 class="center">Login to Happy-Home</h1>
	<div class="row">
	<div class="col-xs-12">
		<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |user| %>
		<div class="col-sm-4">
		</div>
			<div class="col-sm-4">
				<div class="form-group">
					<%= user.email_field :mail, class: "form-control", placeholder: "Enter your mail", autofocus: true %>		
				</div>
		        <div class="form-group">
		            <%= user.password_field :password, class: "form-control", placeholder: "Enter your password", autocomplete: "off" %>
		        </div>
		    </div>
		    <div class="col-sm-4">
		    </div>
		    <div class="form-group">
		    	<div class="col-sm-offset-5 col-sm-1">
		    		<%= user.submit "Login", class: "btn btn-success"%>
		   		</div>
		    </div>
		<% end %>
	</div>
</div>